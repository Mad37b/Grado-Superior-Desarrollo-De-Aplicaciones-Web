package test2;
import java.util.*;
public class array {

	

	
	public static void main (String [] args ) {
		
		// 1. Ejercicio  - crear un array como variable y actualizar, añadir o modificar 
		
		// variables 
		
		
		Scanner teclado = new Scanner(System.in);
		int[] array = new int [5];
		int añadir= 0;
		String respuesta = " " ; 
		String indice ;
		int contador = 0;
		
		// con for solo muestra los datos
	
		
		// Aqui empieza el programa
		
		System.out.println("Bienvenido a mi programa de array"+"\n");
		System.out.println("¿ Quieres añadir, modificar o borrar algo ?");
		
		respuesta = teclado.next(); // Lee la respuesta
		while (!respuesta.equalsIgnoreCase("Salir")) {	

			if (respuesta.equalsIgnoreCase("Añadir")) {
				// si el array no está vacío 
				if ( array !=null) {
					System.out.println("Ya hay datos en el array ");
				}else {
					
				System.out.println("Perfecto vamos a introducir datos");
				}
				
			}
			System.out.println("prueba");
			respuesta = teclado.next();
			
			if(respuesta.equals("Modificar")) {
				System.out.println("Vale vamos a modificar los datos");
				respuesta = teclado.next();
				System.out.println(" el valor a sido " + respuesta);
			}
			
		}

		


		// borrar elementos por teclados al array 
		
	}
	
}
